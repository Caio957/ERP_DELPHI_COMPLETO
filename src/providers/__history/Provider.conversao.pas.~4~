unit Provider.conversao;


interface

  uses
    SysUtils,
    StrUtils,
    Classes;

    Type
    TPCPessoas = (tpcliente, tpfornecedores, tpfuncionarios);

    function PessoasToint(const t: TPCPessoas):integer;

implementation

//implementando pessoas

function PessoasToint(const t: TPCPessoas):integer;
begin
    case t of
    tpcliente:        Result := 1;     //Esse Result lá na frente vai ajudar a, mesmo que o valor iniciar do valor retornado pela function seja 0,
    tpfornecedores:   Result := 2;     //identificar o tp como o número destinado ao Result; Não importando outro núemero padrão.
    tpfuncionarios:   Result := 3;
    end;                               //esse é um tipo de ENUMERAÇÃO tirado do ACBR, onde eu deixo mais explícito o tipo que estou trabalhando.




end;


end.
